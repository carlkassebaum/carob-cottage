<%= render partial: "administrator/navigation_bar" %>
<div id="flash_wrapper">
    <%= render partial: "layouts/flash", locals: {flash_class: ""} %>    
</div>

<div id="price_manager_header_wrapper">
    <div id="price_manager_header_text">
        Current Price Rules        
    </div>
</div>

<div id="price_manager_body_wrapper">
    <table class="price_manager_table center">
        <% @price_rules.each do | price_rule | %>
            <tr>
                <td class="price_rule_td price_rule_name">
                    <%= price_rule.name %>
                </td>
                <td class="price_rule_td price_rule_description">
                    <%= price_rule.description %>
                </td>
                <td class="price_rule_td price_rule_edit_button">
                    
                </td>
                <td class="price_rule_td_right price_rule_td price_rule_delete_button">
                    
                </td>
            </tr>
        <% end %>         
    </table>
</div>