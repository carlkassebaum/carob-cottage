<script>
  if(timer != null) 
  { 
      clearInterval(timer); 
      timer = null;
      showImages();
  }

  function showImages()
  {
      var video_wrapper = document.getElementById("extern_wrapper");
      $(video_wrapper).remove();
      var x = document.getElementsByClassName("gallery_image_wrapper");
      for (i = 0; i < x.length; i++) x[i].style.display = "none"      
      if(timer != null) { clearInterval(timer); }
      body = document.getElementById("home_gallery_body")
      body.style.display = "block";
      first_image = document.getElementsByClassName("gallery_image_wrapper")[0];
      $(first_image).fadeIn(800);
      timer = setInterval(function(){plusDivs(1)}, 5000);          
  }
  
  var hideVideoShowImages = function()
  {
    showImages();
  }

  function plusDivs(n) 
  {
    showDivs(slideIndex += n);
  }

  function showDivs(n) 
  {
    var i;
    var x = document.getElementsByClassName("gallery_image_wrapper");
    if (n > x.length) {slideIndex = 1}    
    if (n < 1) {slideIndex = x.length}
    for (i = 0; i < x.length; i++) 
    {
      if(x[i].style.display != "none") {  
        $(x[i]).fadeOut(800, function() { $(x[slideIndex-1]).fadeIn(800) })
      }
      else { x[i].style.display = "none"; }
    }
  }
</script>


