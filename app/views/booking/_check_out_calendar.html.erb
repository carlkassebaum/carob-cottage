<%= link_to "Check In",  reservation_calendar_path(start_date: @start_date), remote: true %>
<% if @check_out_date %>
    <%= link_to "Check Out",  reservation_calendar_path(start_date: @start_date, check_in_date: @check_in_date, check_out_date: @check_out_date), remote: true %>
<% else %>
    <div> Check Out</div>
<% end %>

<% unless @hide_calendar %>
    <div id="calendar">
        <%= link_to "Previous", reservation_calendar_path(start_date: (@start_date - 1.month), check_in_date: @check_in_date, check_out_date: @check_out_date), method: :get, remote: true %>
        <%= link_to "Next",     reservation_calendar_path(start_date: (@start_date + 1.month), check_in_date: @check_in_date, check_out_date: @check_out_date), method: :get, remote: true %>

        <div><%= Date::MONTHNAMES[@start_date.month] %></div>
        <%= month_calendar start_date: @start_date do |date| %>
            <td class="day">
                <% if date.mon == @start_date.month %>
                    <% class_list = "" %>                
                    <% class_list += " highlight" if !params[:check_out_date].nil? && (date.between?(params[:check_in_date],params[:check_out_date])) %>                    
                    <% if !@blocked_dates.include? date.mday %>
                        <% class_list += " end_date_highlight" if date == params[:check_out_date] %> 
                        <%= link_to "#{date.mday}", 
                            reservation_calendar_path(start_date: @start_date, check_in_date: @check_in_date, check_out_date: date, hide_calendar: true), 
                            class: "check_in_unblocked #{class_list}", 
                            onclick: "set_form_value('booking_departure_date','#{date.strftime("%Y-%m-%d")}')",
                            onmouseover: "highlight_date_elements('#{@check_in_date}','#{date}')",
                            remote: true %>
                    <% elsif @min_stay_dates.include? date.mday %>
                        <% class_list += " start_date_highlight" if date == params[:check_in_date] %>                    
                        <div class="check_in_unblocked + <%= class_list %>"><%= date.mday %></div>
                    <% else %>    
                        <div class="check_in_blocked">-</div>
                    <% end %>
                <% end %>
            </td>
        <% end %>
    </div>
<% end %>