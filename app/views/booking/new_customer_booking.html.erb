<%= form_for @booking, :url => { :action => "create_customer_booking" } do |f| %>
    <%= f.text_field   :name, class: "w3-input" %>
    <%= f.text_field   :contact_number, class: "w3-input" %>
    <%= f.email_field  :email_address, class: "w3-input" %>
    <%= f.text_field   :country, class: "w3-input" %>
    <%= f.text_field   :postcode, class: "w3-input" %>
    <%= f.text_field   :number_of_people, class: "w3-input" %>
    <%= f.text_field   :estimated_arrival_time, class: "w3-input" %>
    <%= f.radio_button :preferred_payment_method, 'Cash on Arrival', :checked => true,  class: "w3-input"  %> Cash on Arrival
    <%= f.radio_button :preferred_payment_method, 'Direct Debit',    :checked => false, class: "w3-input" %> Direct Debit
    <input type="checkbox" id="booking_agreement" name="terms_and_conditions_agreement" class="w3-input" onclick="invert_button_enabled('place_reservation_button','booking_agreement')"> I agree to the terms and conditions </br>
    <%= f.submit "Place Reservation", id: "place_reservation_button", disabled: true %>
<% end %>