<div>
  <% if !@calendar.nil? && @calendar[:display_links] == true %>
    <div class="calendar-heading">
      <%= link_to t('simple_calendar.previous', default: 'Previous'), calendar.url_for_previous_view %>
      <span class="calendar-title"><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></span>
      <%= link_to t('simple_calendar.next', default: 'Next'), calendar.url_for_next_view %>
    </div>  
  <% end %>

  <table class="month_calendar">
    <tr>
      <% date_range.slice(0, 7).each do |day| %>
        <th class=<%= (@calendar_options.nil? || @calendar_options[:header_class].nil?) ? "" : @calendar_options[:header_class] %>>
          <%= t('date.abbr_day_names')[day.wday] %>
        </th>
      <% end %>
    </tr>
    
    <tbody class=<%= @calendar_options[:body_class] unless @calendar_options.nil? || @calendar_options[:body_class].nil? %>>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <% block.call day, sorted_events.fetch(day, []) %>
          <% end %>
        </tr>
      <% end %>      
    </tbody>
  </table>
</div>
